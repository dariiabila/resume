<main>
  <div class="row">
    <div>
      {{#with navigation}}
      {{> shop_nav}}
      {{/with}}
    </div>

    <div>
      <nav class="breadcrumb">
        <ol class="breadcrumb my-5">
          <ol class="breadcrumb">
            {{#each breadcrumb}}
            {{#if url}}
            <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
            {{else}}
            <li class="breadcrumb-item active">{{name}}</li>
            {{/if}}
            {{/each}}
          </ol>
      </nav>
    </div>

    <div>
      <h1>{{header}}</h1>
      <div class="row">
        {{#each sortBlock}}
        <div class="col-3">
          <select class="form-select">
            <option selected>{{placeholder}}</option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>
            {{/each}}
          </select>
        </div>
        {{/each}}
      </div>
    </div>

    <div class="row">
      {{#with filterBlock}}
      {{!-- <div class="row"> --}}
        <div class="col-4">
          <div class="card mt-4">
            <div class="card-body">

              <div>
                {{#with sellers}}
                <label class="form-label mb-3">{{title}}</label>

                {{#each list}}
                <div class="form-check">
                  <label class="form-check-label">
                    {{value}}
                  </label>
                  <input class="form-check-input" type="checkbox">
                </div>
                {{/each}}
                {{/with}}
              </div>

              <hr class="my-3">

              <div>
                {{#with brands}}
                <label class="form-label mb-2">{{title}}</label>
                <input class="form-control mb-3" placeholder="{{input.placeholder}}">

                {{#each options}}
                <div class="form-check my-2">
                  <label class="form-check-label">
                    {{value}}
                  </label>
                  <input class="form-check-input" type="checkbox">
                </div>
                {{/each}}

                {{/with}}
              </div>

              <hr class="my-3">

              <div>
                {{#with price}}
                <label class="form-label mb-2">{{title}}</label>
                <input class="form-control mb-3" placeholder="{{range.from}}">
                <input class="form-control mb-3" placeholder="{{range.to}}">
                {{#with button}}
                <a href="{{link}}" class="btn btn-outline-secondary px-4">{{text}}</a>
                {{/with}}
                {{/with}}
              </div>

              <hr class="my-3">

              <div>
                {{#each filterList}}
                <p class="mt-3">{{title}}</p>
                {{#each options}}
                <div class="form-check mt-2">
                  <label class="form-check-label">
                    {{value}}
                  </label>
                  <input class="form-check-input" type="checkbox">
                </div>

                {{/each}}
                <hr>
                {{/each}}
              </div>

            </div>

          </div>

        </div>
        {{!--
      </div> --}}
      {{/with}}

      <div class="col-8 mt-2">
        <div class="row">
          {{#each goodsList}}
          {{> catalogItem}}
          {{/each}}
        </div>
      </div>

    </div>

    <div>
      {{#with service}}
      <div class="card text-bg-success text-center mt-5">
        <div class="card-box">
          <h4 class="mt-3">{{title}}</h4>
          <div class="my-4">{{description}}</div>
          {{#each buttons}}
          <a href="{{link}}" class="btn btn-primary mb-3">{{text}}</a>
          {{/each}}
        </div>
      </div>
      {{/with}}
    </div>

    <hr style="border-width: 2px;" class="my-5">

    <div>
      {{> footer_shop}}
    </div>

  </div>
</main>
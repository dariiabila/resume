<main>
  <div class="row">
    {{#with program}}
    <h1 class="text-center">Excursion:</h1>
    <div>
      {{#with excursion}}
      <p>Name: {{name}}</p>
      <p>Location: {{location.city}}, {{location.country}}</p>
      <p>Date: {{date}}</p>
    </div>
    <hr>


    <hr>
    <div class="card">
      <div class="card-body">
        {{#each program}}
        <h2 class="mt-2 mb-4 text-center">Program: {{name}}</h2>

        <p>Type: {{type}};

          {{duration}} hours
        </p>


        {{#with details}}
        <div><b>Address: </b>{{museum.name}}</div>


        {{#if museum}}
        {{#with museum}}

        <div>{{location.address}}, {{location.city}}, {{location.country}}</div>

        <div class="card mt-4">
          <div class="card-header">
            <p class="mt-3 text-center"><strong>Exhibits:</strong></p>
          </div>
          <div class="card-body">

            <ul>
              {{#each exhibits}}
              <li>Artist: {{#if artist}}{{artist}}{{else}}Unknown{{/if}}</li>
              <p class="mt-2">{{description}}</p>
              {{#if audio_guide}}
              <p class="text-end"><em>Audio guide: Available</em></p>
              {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
        {{/with}}
        {{/if}}


        <div>

          {{#if venue}}
          {{#with venue}}

          <div>{{location.address}}, {{location.city}}, {{location.country}}</div>
          {{/with}}

          <div class="card col-7 mt-4 ms-5">
            <div class="card-header mb-2"><strong>Performers: </strong></div>
            <ul>
              {{#each performers}}
              <li>{{name}}, {{type}}</li>
              {{/each}}

              {{/if}}
            </ul>
          </div>
        </div>

        <div class="text-end">
          {{#with guide}}
          <p><b>Guide: </b>{{name}}</p>
          <p>Language: {{language}}</p>
          <p>Rating: {{rating}}</p>
          {{/with}}
        </div>
        <hr class="my-3">
        {{/with}}


        {{/each}}

      </div>
    </div>
    {{/with}}
    {{/with}}
  </div>
</main>
{{!--
Це код container файлу для education сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="My Education" big=true}}
            <ul>
                {{#each education}}
                <li>{{name}}
                    {{#if isEnd}} {{/if}}

                    {{#unless isEnd}} (ще в процесі) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title data="My certificates"}}
            {{#each certificates}}
            <ul>
                <li>
                    {{name}} ({{id}})</li>
                </li>
            </ul>
            {{/each}}
        </section>
    </main>
    {{/with}}
</div>



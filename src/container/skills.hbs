<main>
  <div class="row">
    {{#with main}}
    <section>
      <div class="card">
        <div class="card-body">
          <div class="text-center my-3">
            {{>title data="All skills" big=true}}
          </div>

          <ul>
            {{#each skills}}
            <li>
              {{name}}

              {{#if point includeZero=true}} ({{point}}) {{/if}}
              {{#if isTop}} (TOP) {{/if}}

              {{#unless point includeZero=true}} (не вивчаємо) {{/unless}}

              {{#unless point}}
              {{#if point includeZero=true}}
              (зараз вивчаємо)
              {{/if}}
              {{/unless}}
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </section>

    <section>
      <div class="card mt-5">
        <div class="card-body">
          <div class="text-center">
            {{>title data="My hobbies" }}
          </div>
          <ol>
            {{#each hobbies}}
            <li>
              {{name}}
              {{#if isMain}} (favourite) {{/if}}
            </li>
            {{/each}}
          </ol>
        </div>
      </div>

    </section>

    {{/with}}
  </div>
</main>
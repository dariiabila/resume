<main>
  <div class="row">

    <div id="navigation">
      {{#with navigation}}
      <div class="card">
        <div class="nav">
          {{#each links}}
          <div class="nav-item m-2">
            <a href="{{href}}" class="nav-link active">{{text}}</a>
          </div>
          {{/each}}
          <a href="{{href}}" class="nav-link disabled mt-2"> Disabled</a>
        </div>
      </div>
      {{/with}}
    </div>

    <div id="header" class="my-5">
      {{#with header}}
      <h1>{{title}}</h1>
      {{#with button}}
      <a class="btn btn-outline-secondary mt-3" href="{{link}}">{{text}}</a>
      {{/with}}
      {{/with}}
    </div>

    <div class="my-4">
      <hr>
    </div>

    <div id="goodsBlock">
      {{#each goodsBlock}}
      {{> cartGoodsItem}}
      {{/each}}
    </div>

    <div class="my-4">
      <hr>
    </div>

    <div id="total">
      {{#with total}}
      <h2>{{title}}</h2>
      <p>{{amount}}</p>
      <p>{{delivery}}</p>
      {{#each buttons}}
      <div class="flex-column mt-3">
        <a href="{{link}}"
          class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isOutline}}btn-outline-success{{/if}}">{{text}}</a>
      </div>
      {{/each}}
      {{/with}}
    </div>

    <div class="my-4">
      <hr>
    </div>

    <div id="goodsOtherBlock">
      <div class="row">
        {{#with goodsOtherBlock}}
        <h2 class="text-center mt-4 mb-3">{{title}}</h2>

        {{#each cards}}
        <div class="col-4">
          <div class="card">
            <img src="{{image}}" class="card-img-top" alt="Product photo">
            <div class="card-body">
              <h5 class="card-title">{{title}}
                {{#if isHot}}
                <span class="badge rounded-pill text-bg-warning text-light text-uppercase p-2">
                  Hot!
                </span>
                {{/if}}
                {{#if isNew}}
                <span class="badge rounded-pill text-bg-primary text-light">New</span>
                {{/if}}
              </h5>
              <p class="card-text">{{description}}</p>
            </div>
          </div>
        </div>
        {{/each}}
        {{/with}}
      </div>
    </div>

    <div class="my-4">
      <hr>
    </div>

    <div id="subscribe">
      {{#with subscribe}}
      <div class="card text-bg-dark">
        <div class="card-body">
          <h2>{{header}}</h2>
          <p>{{description}}</p>
          {{#each buttons}}
          <div class="flex-column mt-3">
            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
          </div>
          {{/each}}
        </div>
      </div>
      {{/with}}
    </div>

    <div>
      <hr class="my-4">
    </div>

    <div class="row">
      {{#each footer}}
      <div class="col-2">
        <div class="nav">
          <div class="nav-item">
            {{#each this}}
            <a href="{{link}}" class="nav-link active {{#if @last}} disabled {{/if}}">{{text}}</a>
            {{/each}}
          </div>
        </div>
      </div>
      {{/each}}
    </div>

  </div>
</main>